{
  "name": "flowpay",
  "version": "1.0.0",
  "description": "Next-generation DeFi payment platform built on Aptos blockchain",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "deploy:contracts": "aptos move publish --named-addresses flowpay=default --assume-yes",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rimraf .next out dist build",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.8.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@tanstack/react-query": "^4.35.3",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.288.0",
    "next": "14.2.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.6",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-config-next": "14.2.33",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vercel": "^32.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/flowpay.git"
  },
  "keywords": [
    "defi",
    "payments",
    "aptos",
    "blockchain",
    "fintech",
    "cross-border",
    "treasury",
    "forex"
  ],
  "author": "FlowPay Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/flowpay/issues"
  },
  "homepage": "https://github.com/yourusername/flowpay#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}